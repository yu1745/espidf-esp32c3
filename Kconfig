# #
# # Logging Configuration
# #
# menu "Logging Configuration"
# config LOG_LEVEL
#     int "Default log level"
#     default 3
#     range 0 5
#     help
#         Default log level for the application:
#         0 = None (ESP_LOG_NONE)
#         1 = Error (ESP_LOG_ERROR)
#         2 = Warning (ESP_LOG_WARN)
#         3 = Info (ESP_LOG_INFO)
#         4 = Debug (ESP_LOG_DEBUG)
#         5 = Verbose (ESP_LOG_VERBOSE)

# config LOG_COLORS
#     bool "Enable colored logs"
#     default y
#     help
#         Enable colored output for log messages.

# endmenu

