# #
# # WiFi Configuration
# #
# menu "WiFi Configuration"
# config WIFI_SSID
#     string "WiFi SSID"
#     default "ZTE-Y55AcX"
#     help
#         The SSID of the WiFi network to connect to.

# config WIFI_PASSWORD
#     string "WiFi Password"
#     default "asdk7788"
#     help
#         The password for the WiFi network.

# config WIFI_ENABLED
#     bool "Enable WiFi"
#     default y
#     help
#         Enable WiFi connectivity in the project.

# config WIFI_AUTO_CONNECT
#     bool "Auto-connect to WiFi on startup"
#     default y
#     depends on WIFI_ENABLED
#     help
#         Automatically connect to configured WiFi network when the device starts.

# config WIFI_RETRY_COUNT
#     int "WiFi connection retry count"
#     default 5
#     range 1 20
#     depends on WIFI_ENABLED
#     help
#         Number of times to retry connecting to WiFi before giving up.

# config WIFI_RETRY_DELAY_MS
#     int "Delay between WiFi retry attempts (ms)"
#     default 2000
#     range 500 10000
#     depends on WIFI_ENABLED
#     help
#         Delay in milliseconds between WiFi connection retry attempts.

# endmenu

# #
# # HTTP Server Configuration
# #
# menu "HTTP Server Configuration"
# config HTTP_SERVER_ENABLED
#     bool "Enable HTTP Server"
#     default y
#     help
#         Enable the HTTP server functionality.

# config HTTP_SERVER_PORT
#     int "HTTP Server Port"
#     default 80
#     range 1 65535
#     depends on HTTP_SERVER_ENABLED
#     help
#         The port number for the HTTP server.

# config HTTP_SERVER_MAX_CONNECTIONS
#     int "Maximum HTTP connections"
#     default 5
#     range 1 20
#     depends on HTTP_SERVER_ENABLED
#     help
#         Maximum number of simultaneous HTTP connections.

# endmenu

# #
# # WebSocket Server Configuration
# #
# menu "WebSocket Server Configuration"
# config WEBSOCKET_SERVER_ENABLED
#     bool "Enable WebSocket Server"
#     default y
#     depends on HTTP_SERVER_ENABLED
#     help
#         Enable the WebSocket server functionality.

# config WEBSOCKET_BUFFER_SIZE
#     int "WebSocket buffer size"
#     default 1024
#     range 256 8192
#     depends on WEBSOCKET_SERVER_ENABLED
#     help
#         Size of the WebSocket message buffer in bytes.

# config WEBSOCKET_MAX_CLIENTS
#     int "Maximum WebSocket clients"
#     default 5
#     range 1 10
#     depends on WEBSOCKET_SERVER_ENABLED
#     help
#         Maximum number of simultaneous WebSocket client connections.

# config WEBSOCKET_BROADCAST_ENABLED
#     bool "Enable WebSocket broadcast"
#     default y
#     depends on WEBSOCKET_SERVER_ENABLED
#     help
#         Enable broadcast functionality for WebSocket messages.

# config WEBSOCKET_BROADCAST_INTERVAL_MS
#     int "Broadcast interval (ms)"
#     default 10000
#     range 1000 60000
#     depends on WEBSOCKET_BROADCAST_ENABLED
#     help
#         Interval in milliseconds between broadcast messages.

# endmenu

